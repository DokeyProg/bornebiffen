---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/tailwind.css";

const { title } = Astro.props;
---

<html lang="da">
  <head>
    <meta charset="utf-8" />

    <!-- Favicon – dit logo som lille ikon i fanen -->
    <link rel="icon" href="/BB-logo.png" />

    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title ? `${title} – Børnebiffen` : "Børnebiffen"}</title>

    <script defer src="https://unpkg.com/tailwindcss-intersect@2.x.x/dist/observer.min.js"></script>
  </head>

  <body class="bg-black text-white">
    <!-- Permanent logo øverst i venstre hjørne (på alle sider) -->
    <a href="/" class="fixed top-5 left-5 z-50">
      <img src="/BB-logo.png" alt="Børnebiffen" class="h-14 md:h-16 drop-shadow-lg" />
    </a>

    <!-- Her kommer indholdet fra dine sider (forside, singleview osv.) -->
    <slot />
  </body>
</html>
